# Google Cloud Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Document AI
DOCUMENT_AI_PROCESSOR_ID=your-processor-id
DOCUMENT_AI_LOCATION=us

# Vertex AI
VERTEX_AI_LOCATION=us-central1
GEMINI_MODEL=gemini-1.5-pro
EMBEDDING_MODEL=textembedding-gecko@003

# Vector Databases
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=your-pinecone-env
PINECONE_INDEX_NAME=legal-clauses
ELASTICSEARCH_URL=https://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Storage
CLOUD_STORAGE_BUCKET=your-storage-bucket
FIRESTORE_DATABASE=legal-analyzer

# KMS
KMS_KEY_RING=legal-analyzer-keys
KMS_KEY_NAME=document-encryption-key

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
SECRET_KEY=your-super-secret-jwt-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis for caching
REDIS_URL=redis://localhost:6379

# Celery for background tasks
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# Monitoring
ENABLE_METRICS=true
BIGQUERY_DATASET=legal_analyzer_metrics
LOG_LEVEL=INFO

# Retrieval Configuration
MAX_SPARSE_RESULTS=50
MAX_DENSE_RESULTS=50
MAX_RERANK_CANDIDATES=20
FINAL_TOP_K=8
SCORE_WEIGHTS_SPARSE=0.35
SCORE_WEIGHTS_DENSE=0.40
SCORE_WEIGHTS_LABEL=0.15
SCORE_WEIGHTS_JURISDICTION=0.05
SCORE_WEIGHTS_TEMPLATE=0.05

# Generation Configuration
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_OUTPUT_TOKENS=2048
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40

# Verification Configuration
NLI_THRESHOLD=0.80
CONFIDENCE_THRESHOLD=0.85
ENABLE_SELF_CHECK=true

# Human Review
ENABLE_HUMAN_REVIEW=true
HIGH_RISK_THRESHOLD=0.70
AUTO_ESCALATE_TYPES=DepositHigh,InterestRateHigh,TerminationAbusive